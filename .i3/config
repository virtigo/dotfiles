	# start a terminal
	bindsym $mod+Return exec --no-startup-id i3-sensible-terminal	
	
	# mod + l to lock
	bindsym $mod+l exec /home/slensky/bin/lock.sh
	
	# open an explorer window
	bindsym $mod+e exec --no-startup-id nautilus
	bindsym $mod+Shift+e exec --no-startup-id gksudo nautilus
	
	# open gedit
	bindsym $mod+g exec --no-startup-id gedit
	bindsym $mod+Shift+g exec --no-startup-id gksudo gedit
	
	# open vim in xterm
	bindsym $mod+x exec --no-startup-id xvim
	bindsym $mod+Shift+x exec --no-startup-id gksudo xvim
	
	# open chrome
	bindsym $mod+Shift+Return exec --no-startup-id google-chrome
	
	# take a screenshot
	bindsym Print exec screenshot

	# program launcher
	bindsym $mod+d exec "rofi -show run -i -lines 4 -eh 2 -width 100 -padding 280 -opacity '80' -bw 0 -font 'System San Francisco Display 18'"
	
	# brightness up/down
	bindsym XF86MonBrightnessUp exec xbacklight -inc 20
	bindsym XF86MonBrightnessDown exec xbacklight -dec 20
	
